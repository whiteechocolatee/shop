include header 

include navigationHeader

div(class='container')
    div(class='row')
        div(class='col col-md-12')
            h1(class='title-panel')= goods[0]['name']
        div(class='card-body-goods')    
            div(class='col col-md-4 ')
                img(
                    src="./images/"+goods[0]['image']
                    alt="item"
                    class='goods-big-image responsive-img')
