include headerModule 

include navigationHeaderModule

div(class='wrapper')
    div(class='container-xl')
        div(class='row')
            div(class='card-body-goods')
                div(class='images-block')
                    div(class='additional-img')    
                        div(class='small-images')
                            each val,index in images
                                div(class='small-img-card')
                                    a(data-fancybox="gallery" href="/images/"+val['path'])
                                        img(class="responsive-img rounded" src="/images/"+val['path'])
                    div(class='profile-img')
                        a(data-fancybox="gallery" href="/images/"+goods[0]['image'])
                            img(
                                src="/images/"+goods[0]['image']
                                alt="item"
                                class='goods-big-image img-fluid rounded'
                                )
                div(class='profile-description')
                    h1(class='title-panel')= goods[0]['name']
                    div(class='goods-description')= goods[0]['description']
                    div(class='goods-cost')
                        span #{goods[0]['cost']}&nbsp; 
                        |uah
                    div(class='size')
                        select
                            option(value='s1') S1 (s-m)
                            option(value='s2') S1 (l-xl)
                    div(class='color-picker')
                        each value in colors
                            input(type='color' class='goods-colors' value=value['color'] disabled)
                    button(
                        class='btn btn-dark add-to-cart'
                        data-goods_id=goods[0]['id']
                        ) Добавить в корзину 
                        i(class="bi bi-bag cart-btn")
    script(src="https://cdn.jsdelivr.net/npm/@fancyapps/ui@4.0/dist/fancybox.umd.js")
include footerModule